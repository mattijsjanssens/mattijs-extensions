FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  2;

method              hierarchical;

hierarchicalCoeffs
{
    n               (2 1 1); // total must match numberOfSubdomains
    delta           0.001;
    order           xyz;
}


