FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    atmosphere
    {
        //type            totalPressure;
        //p0              uniform 0;

        //type            prghPressure;   //uniformFixedValue;
        //p               uniform 0;
        type            slip;
    }

    outlet
    {
        type            hydrostaticPressure;
        rho             rho;
        pRefValue       0;
        pRefPoint       (118 0 8);
        value           uniform 0;
    }

    ".*"
    {
        type            fixedFluxPressure;
        value           uniform 0;
    }
}

