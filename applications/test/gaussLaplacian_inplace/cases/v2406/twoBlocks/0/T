FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   nonuniform List<scalar> (1 10 2 3);

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    left
    {
        type            fixedValue;
        value           uniform 1;
    }

    right
    {
        type            fixedValue;
        value           uniform 5;
    }

    frontAndBack
    {
        type            empty;
    }
}

